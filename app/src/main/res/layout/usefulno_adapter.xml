<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/f_fighter_image"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/firefighter" />
        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fire_fighters"
            android:textSize="18sp"
            android:layout_marginTop="14dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/f_fighter_image"
            android:layout_toRightOf="@+id/f_fighter_image"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="12sp"
            android:layout_below="@+id/heading"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/f_fighter_image"
            android:layout_toRightOf="@+id/f_fighter_image"/>

        <ImageView
            android:id="@+id/call_do_icon"
            android:layout_width="38dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/call2x"
            android:tint="@color/purple_700"
            tools:ignore="UseAppTint" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>